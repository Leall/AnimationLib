<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333341da"
    tools:context="com.example.administrator.animation.MainActivity">

    <ImageButton
        android:id="@+id/ibtn_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/ibtn_like"
        android:background="@drawable/gift_icon_selector" />

    <ImageButton
        android:id="@+id/ibtn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/like_icon_selector" />

    <com.example.administrator.animation.like.PLayout
        android:id="@+id/periscope"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:background="#ffffff" />

</RelativeLayout>
